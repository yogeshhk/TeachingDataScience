# OpenAI API Configuration
OPENAI_API_KEY=your-api-key
LLM_MODEL=gpt-4o
LLM_TEMPERATURE=0.1

# HuggingFace (optional, for alternative embeddings)
HUGGINGFACEHUB_ACCESS_TOKEN=your_api_key

# Vector Database - Milvus/Zilliz Cloud
# Sign up at: https://cloud.zilliz.com/
# If not set, will fallback to FAISS (local)
MILVUS_URI=https://your-cluster-xxxxx.zillizcloud.com
MILVUS_TOKEN=your-zilliz-cloud-token

# Alternative naming (both supported)
ZILLIZ_CLOUD_URI=https://your-cluster-xxxxx.zillizcloud.com
ZILLIZ_CLOUD_TOKEN=your-zilliz-cloud-token

# Embedding Model Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIM=384